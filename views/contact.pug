
//- So today we will make a contact form using pug template engine 

extends base.pug 

block style 
  style 
              include ../static/style.css
              include ../static/stylecontact.css

block content 
   div.contact 
      h2 Contact Us 
      form.inputstyle(action="/contact" method="post")
        input(type="text" name="name" placeholder="Enter your name")
        input(type="text" name="site" placeholder="Enter the farm house site")
        input(type="text" name="typeof" placeholder="Enter the type of farmhouse")
        input(type="email", name="email" placeholder="Enter your email")
        input(type="number", name="number" placeholder="Enter your phone number")  
        button(type="submit") Submit 

   